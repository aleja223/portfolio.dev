---
interface Props {
    title:string
     description:string[]
      link?:string
       date:string
}
const { title, description, link, date}=Astro.props as Props
---

<div class="absolute  w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
<time class="mb-1 text-sm  font-normal leading-none ">{date} </time>
<h3 class="text-xl text-zinc-200 mb-2 lg:text-2xl text-wrap max-w-[800px]">{title}</h3>
        <ul class="text-lg opacity-85 text-black mb-4 text-pretty list-disc pl-5 space-y-2">
            {description.map((item) => (
            <li class="mb-1">{item}</li>
            ))}
        </ul>
        